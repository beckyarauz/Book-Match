<div class="form-container">
  <h2>Sign Up</h2>

  <form id="form-auth" action="/signup" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter username">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>


    <div class="g-recaptcha" data-sitekey="6LfGD4cUAAAAAKdMzBP_P0_kX5iYfctjiLjWrQOk" data-theme="dark"></div>
    <button class="btn btn-book" type="submit">Create account</button>

    <a href="auth/slack">Sign in with Slack</a>

    {{#if message}}
    <div class="message">{{ message }}</div>
    {{/if}}

    {{#if suggestion}}
    <div class="message">
      <ul>
        {{#each suggestion}}
        <li>{{ this }}</li>
        {{/each}}
      </ul>
    </div>
    {{/if}}

  </form>
</div>

<script src='https://www.google.com/recaptcha/api.js'></script>