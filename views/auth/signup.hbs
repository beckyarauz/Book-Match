<div class="form-container">
  <h2>Sign Up</h2>

  <form id="form-auth" action="/signup" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input name="username" type="text" class="form-control" placeholder="example: harryPotter30">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password">
    </div>


    {{!-- <div class="g-recaptcha" data-sitekey="" data-theme="dark"></div>--}}
    <button class="btn btn-book" type="submit">Create account</button> 

    {{!-- <a href="auth/slack">Sign in with Slack</a> --}}

    {{#if message}}
    <div class="message">{{ message }}</div>
    {{/if}}

    {{#if suggestion}}
    <div class="message">
      <ul>
        {{#each suggestion}}
        <li>{{ this }}</li>
        {{/each}}
      </ul>
    </div>
    {{/if}}

  </form>
</div>

<script src='https://www.google.com/recaptcha/api.js'></script>